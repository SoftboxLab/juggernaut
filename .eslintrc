{
  "extends": [
    "@softboxlab/eslint-config-gandalf-lint",
    "plugin:react/recommended",
    "plugin:jest/recommended"
  ],
  "plugins": ["import"],
  "parser": "babel-eslint",
  "settings": {
    "react": {
      "version": "16.8.2"
    },
    "import/resolver": {
      "node": {
        "moduleDirectory": ["node_modules", "src/"]
      }
    }
  },
  "rules": {
    "space-before-function-paren": "off",
    "id-length": 0,
    "no-multiple-empty-lines": [
      "error",
      {
        "max": 1,
        "maxEOF": 1
      }
    ],
    "complexity": ["error", 4],
    "sort-imports": "off",
    "sort-keys": "off",
    "sort-vars": "error",
    "nonblock-statement-body-position": [
      "error",
      "beside"
    ],
    "no-confusing-arrow": [
      "error",
      {
        "allowParens": true
      }
    ],
    "import/order": "off",
    "sort-imports-es6-autofix/sort-imports-es6": "off"
  }
}
